@model BookEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="card border-dark mt-3 mb-3">
    <div class="card-header">
        <h4 class="card-title">
            รายละเอียด หนังสือ : @Model.Isbn
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">

            <div class="row mb-2">
                <label asp-for="TiTle" class="col-sm-2 col-form-label">ชื่อหนังสือ : </label>
                <div class="col-sm-4">
                    <input asp-for="TiTle" type="text" class="form-control">
                </div>
            </div>

            <div class="row mb-2">
                <label asp-for="Description" class="col-sm-2 col-form-label">รายละเอียดหนังสือ : </label>
                <div class="col-sm-4">
                    <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                </div>
            </div>

            <div class="row mb-2">
                <label asp-for="Price" class="col-sm-2 col-form-label">ราคาหนังสือ : </label>
                <div class="col-sm-2">
                    <input asp-for="Price"  class="form-control">
                </div>
            </div>
           
            <div class="row mb-2">
                <label  class="col-sm-2 col-form-label">ยืนยันการบันทึก : </label>
                <div class="col-sm-2">
                <button type="submit" class="btn btn-outline-success btn-sm">
                Save
                </button>
            </div>
            </div>

        </form>
    </div>
</div>
<div class="card-footer">
    <div>
        <div class="float-right">
            <form asp-controller="Books"
                  asp-action="Delete" asp-route-id="@Model.Isbn">
                <a class="btn btn-outline-success  btn-sm" asp-controller="Books"
                   asp-action="Index">
                    Index
                </a>
               
                <button type="submit" class="btn btn-outline-success btn-sm">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>
